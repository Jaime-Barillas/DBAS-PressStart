extends ../../Partials/layout.pug

block content
  // ==============================================================
  // pageheader
  // ==============================================================
  .row
    .col-xl-9.col-lg-9.col-md-9.col-sm-9.col-9
      .page-header
        h1.pageheader-title Welcome Management Team
    // ==============================================================
    // end pageheader
    // ==============================================================
    .col-xl-3.col-lg-3.col-md-3.col-sm-3.col-3
      .page-header
        h1.pageheader-title Current Offers
  .row
    .col-xl-9.col-lg-9.col-md-9.col-sm-9.col-9
      div
        h4
          p This is the Manager Dashboard page where you may update sales offers, manage staff and generate reports. 
          p To add or update employees into the system choose Payroll from the sidebar.
    .col-xl-3.col-lg-3.col-md-3.col-sm-3.col-3
      div
        h4
         table#dt.table
          thead
            tr
              th Tile
              th(style='min-width: 10em;') Date
              th Details
          tbody
              - for (row of offers)
              tr
                td= row.news_title
                td= row.news_date_added.toDateString()
                td= row.news_article
  


