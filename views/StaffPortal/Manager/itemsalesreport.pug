extends ../../Partials/layout

block content
  // ==============================================================
  // pageheader
  // ==============================================================
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      .page-header
        h1.pageheader-title   
        
        ul.navbar-nav.ml-auto.navbar-right-top            
          li.nav-item
            .top-search-bar
              a(href="./monthlyreport") Monthly Report                   
          li.nav-item
            .top-search-bar
              a(href="./itemsalesreport") Item Sales Report                  

        
        
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      div
        h3
          p Sales of items by day. 
  // ==============================================================
  // end pageheader
  // ==============================================================
  .ecommerce-widget
    .row
      // ==============================================================
      // ==============================================================
      // Results
      // ==============================================================
    table#dt.table
      thead
        tr
          th Game
          th Amount Sold
          th Price
          th(style='min-width: 10em;') Date
      tfoot
        tr
          th Game
          th Amount Sold
          th Price
          th Date
      tbody
        - for (row of dat)
          tr
            td
              a(href=`../individualInventory/${row.item_id}`)= row.item_report_name
            td= row.item_report_quantity
            td= row.item_report_price
            td= row.item_report_date.toDateString()
