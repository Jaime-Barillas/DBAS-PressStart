extends ../Partials/layout.pug

block content
  // ==============================================================
  // pageheader
  // ==============================================================
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      .page-header
        h1.pageheader-title Individual Inventory Listing
  // ==============================================================
  // end pageheader
  // ==============================================================
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      h2= item.item_name
      hr
      table.table
        tr
          th Description:
          td(colspan='3')= item.item_description
        tr
          th Physical Condition:
          td= condition.physicalCondition
          th Quantity
          td= item.item_stock_quantity
        tr
          th Box Condition:
          td= condition.boxCondition
          th Sales Price
          td= item.item_sale_price
        tr
          th Manual Condition:
          td= condition.manualCondition
          th MSRP
          td= item.item_mrsp
