extends ../Partials/layout.pug

block content
  // ==============================================================
  // pageheader
  // ==============================================================
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      .page-header
        h1.pageheader-title Inventory Search Results
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      h2
        label(for='exampleFormControlSelect1') Store Location:&nbsp;
        label= store.store_address
      hr
      form.form-inline
        .form-group.mx-sm-3.mb-2
          label.sr-only Item Number
          input(type='text' placeholder='Item Number')
        button.btn.btn-primary.mb-2(type='submit') Search
  br
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      h2
        | Results:
      hr
      table#inventoryResult.table
        tr
          th Item Id
          th Name
          th Description
        - for (item of items)
          tr.clickable-row
            td= item.item_id
            td(style='padding: 0px 10px')
              a(href=`individualInventory/${item.item_id}`)= item.item_name
            td= item.item_description
  // ==============================================================
  // end pageheader
  // ==============================================================
  .ecommerce-widget
    .row
