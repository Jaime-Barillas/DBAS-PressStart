html
	include header.pug
	body

.main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='lastname') Last Name:
            input#name.form-control(type='text', placeholder='last' name='lastname')
		  div.form-group
            label(for='firstname') First Name:
            input#name.form-control(type='text', placeholder='first' name='firstname')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Sign up